<div class="article-reviews">
  <% @comments.each do |comment| %>
          <%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>

          <% if signed_in? && current_user.admin? %>
            <%= link_to ('<i class="fas fa-trash"></i>').html_safe, article_comment_path(comment.article, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <p><%= comment.body %></p>
          <hr>
  <% end %>
</div>
